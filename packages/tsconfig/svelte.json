{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "SvelteKit",
	"extends": "./base.json",
	"compilerOptions": {
		"strict": false,

		"module": "es2020",
		"lib": ["es2020"],
		"target": "es2019",
		"noEmit": true,

		"importsNotUsedAsValues": "error",

		"sourceMap": true,
		"types": ["node", "svelte"]
	},
	"exclude": ["node_modules"]
}
