{
	"extends": "tsconfig/svelte.json",
	"compilerOptions": {
		"baseUrl": ".",

		"paths": {
			"$components/*": ["src/lib/components/*"],
			"$util/*": ["src/lib/util/*"],
			"$types/*": ["src/lib/types/*"],
			"$types": ["src/lib/types/index.ts"],
			"$api/*": ["src/lib/api/*"],
			"$api": ["src/lib/api"],
			"$store/*": ["src/lib/store/*"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"],
	"exclude": ["node_modules/", ".svelte-kit/", "svelte.config.js", "build/"]
}
